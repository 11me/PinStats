{
  "manifest_version": 3,
  "name": "PinStats: Analytics & Downloader",
  "version": "1.0.0",
  "description": "Reveals hidden engagement metrics and enables one-click downloading from Pinterest",
  "permissions": ["scripting", "activeTab", "downloads", "storage"],
  "host_permissions": ["*://pinterest.com/*", "*://www.pinterest.com/*"],
  "content_scripts": [
    {
      "matches": ["*://pinterest.com/*", "*://www.pinterest.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["*://pinterest.com/*", "*://www.pinterest.com/*"]
    }
  ],
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
